{
  "name": "@opencrvs/notification",
  "version": "1.0.0-alpha.3.0",
  "description": "OpenCRVS notification service",
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "node build/dist/src/index.js",
    "test": "jest --coverage --silent --noStackTrace && yarn test:compilation",
    "test:watch": "jest --watch",
    "open:cov": "yarn test && opener coverage/index.html",
    "precommit": "tslint --project ./tsconfig.json && lint-staged",
    "test:compilation": "tsc --noEmit",
    "build": "tsc && copyfiles 'src/**/*.json' build/dist",
    "postbuild": "ef-tspm",
    "build:clean": "rm -rf build",
    "extract:translations": "bash extract-translations.sh"
  },
  "dependencies": {
    "@opencrvs/commons": "^1.0.0-alpha.3.0",
    "@types/hapi-pino": "^6.3.0",
    "@types/pino": "^5.14.0",
    "app-module-path": "^2.2.0",
    "boom": "^7.2.0",
    "dotenv": "^6.1.0",
    "handlebars": "^4.7.6",
    "hapi": "^17.5.1",
    "hapi-auth-jwt2": "8.1.0",
    "hapi-pino": "^6.3.0",
    "hapi-sentry": "^2.1.0",
    "iconv": "^2.3.1",
    "joi": "^14.0.6",
    "jsonwebtoken": "^8.3.0",
    "node-fetch": "^2.6.0",
    "pino": "^5.14.0",
    "typescript": "^3.7.2"
  },
  "devDependencies": {
    "@ef-carbon/tspm": "^2.2.5",
    "@types/fhir": "^0.0.30",
    "@types/handlebars": "^4.1.0",
    "@types/hapi": "^17.0.12",
    "@types/hapi-auth-jwt2": "8.0.1",
    "@types/jest": "^24.0.13",
    "@types/joi": "^14.0.0",
    "@types/node-fetch": "^2.3.4",
    "chalk": "^4.1.0",
    "copyfiles": "^2.1.1",
    "cross-env": "^5.2.0",
    "jest": "24.7.1",
    "jest-fetch-mock": "^2.1.2",
    "lint-staged": "^7.1.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.15.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^6.1.1",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.17.0",
    "tslint-microsoft-contrib": "^6.2.0"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "prettier --write",
      "git add",
      "yarn extract:translations"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@notification/(.*)": "<rootDir>/src/$1"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "setupFiles": [
      "./test/setupJest.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}