{
  "name": "@opencrvs/gateway",
  "version": "1.0.0-alpha.3.0",
  "description": "OpenCRVS API Gateway with GraphQL",
  "license": "MPL-2.0",
  "scripts": {
    "start": "concurrently \"nodemon --exec ts-node -r tsconfig-paths/register src/index.ts\" \"yarn gen:types:watch\"",
    "start:prod": "node build/dist/src/index.js",
    "test": "jest --coverage --silent --noStackTrace && yarn test:compilation",
    "test:watch": "jest --watch",
    "open:cov": "yarn test && opener coverage/index.html",
    "precommit": "tslint --project ./tsconfig.json && lint-staged",
    "gen:full-schema": "node -e \"const importSchema = require('graphql-import').importSchema; console.log(importSchema('src/graphql/index.graphql'))\"",
    "gen:types": "yarn -s gen:full-schema > src/graphql/schema.graphql && npx graphql-schema-typescript generate-ts src/graphql/schema.graphql --output src/graphql/schema.d.ts && yarn prettier --write src/graphql/schema.d.ts && echo Done",
    "gen:types:watch": "nodemon -e graphql -i src/graphql/schema.graphql -x 'yarn gen:types'",
    "test:compilation": "tsc --noEmit",
    "build": "tsc && copyfiles 'src/**/*.graphql' build/dist",
    "docker:image:create": "yarn build && docker build --file Dockerfile.compiled --tag afoone/ocrvs-gateway:crvs . && docker push afoone/ocrvs-gateway:crvs",
    "postbuild": "ef-tspm",
    "build:clean": "rm -rf build"
  },
  "dependencies": {
    "@elastic/elasticsearch": "6",
    "@graphql-tools/graphql-file-loader": "^6.0.9",
    "@graphql-tools/load": "^6.0.9",
    "@graphql-tools/schema": "^6.0.9",
    "@opencrvs/commons": "^1.0.0-alpha.3.0",
    "@sentry/node": "^5.10.2",
    "@types/archiver": "^3.0.0",
    "@types/flat": "^0.0.28",
    "@types/hapi-pino": "^6.3.0",
    "@types/pino": "^5.14.0",
    "@types/uuid-validate": "^0.0.1",
    "apollo-server-hapi": "^2.14.2",
    "app-module-path": "^2.2.0",
    "archiver": "^3.1.1",
    "bunyan": "^1.8.12",
    "country-data": "^0.0.31",
    "csv-stringify": "^5.3.4",
    "dotenv": "^6.1.0",
    "flat": "^5.0.0",
    "glob": "^7.1.2",
    "graphql": "^15.0.0",
    "graphql-import": "^0.5.2",
    "graphql-tools": "^3.0.1",
    "hapi": "^17.4.0",
    "hapi-auth-jwt2": "8.1.0",
    "hapi-boom-decorators": "^3.0.0",
    "hapi-pino": "^6.3.0",
    "hapijs-status-monitor": "^0.6.0",
    "joi": "^14.0.6",
    "jsonwebtoken": "^8.3.0",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.10",
    "nedb": "^1.8.0",
    "node-fetch": "^2.6.0",
    "pino": "^5.14.0",
    "ts-node": "^6.1.1",
    "tsconfig-paths": "^3.8.0",
    "uuid": "^3.2.1",
    "uuid-validate": "^0.0.3",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@ef-carbon/tspm": "^2.2.5",
    "@types/bunyan": "^1.8.4",
    "@types/code": "^4.0.3",
    "@types/dotenv": "^6.1.0",
    "@types/fhir": "^0.0.30",
    "@types/glob": "^5.0.35",
    "@types/graphql": "^0.13.1",
    "@types/hapi": "^17.0.12",
    "@types/hapi-auth-jwt2": "8.0.1",
    "@types/jest": "^24.0.13",
    "@types/joi": "^14.0.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash": "^4.14.108",
    "@types/nedb": "^1.8.3",
    "@types/node": "^10.12.5",
    "@types/node-fetch": "^2.3.4",
    "@types/uuid": "^3.4.3",
    "concurrently": "^3.5.1",
    "copyfiles": "^2.1.1",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "graphql-schema-typescript": "1.5.2",
    "jest": "24.7.1",
    "jest-fetch-mock": "^2.1.2",
    "lab": "^15.1.2",
    "lab-transform-typescript": "^3.0.1",
    "lint-staged": "^7.1.0",
    "nodemon": "^1.19.4",
    "nyc": "^11.3.0",
    "opener": "^1.5.1",
    "prettier": "1.19.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.7.2",
    "typestyle": "^1.3.7"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            2722,
            2532,
            2554,
            2339
          ]
        }
      }
    },
    "testEnvironment": "node",
    "setupFiles": [
      "./test/setupJest.ts"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@gateway/(.*)": "<rootDir>/src/$1"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  },
  "keywords": [
    "api",
    "nodejs",
    "hapi",
    "typescript"
  ]
}